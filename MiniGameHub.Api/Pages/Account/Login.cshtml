@page "/Account/Login"
@model MiniGameHub.Api.Pages.Account.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-page">
    <div class="lead">
        <h1>Login</h1>
        <p>Use your account credentials to login</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Login</h2>
                </div>

                <div class="card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Input.ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input type="email" class="form-control" asp-for="Input.Email" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input type="password" class="form-control" asp-for="Input.Password" />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>